<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_goods_info"
    tools:context="com.peach_mall.yyq439.app.GoodsInfoActivity">

    <!-- 标题栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_good_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品详情"
            android:textColor="#FB548D"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/ib_good_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more" />
    </LinearLayout>

    <!-- 分割 -->
    <View
        android:background="#FFDBE7"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <!-- 线性布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.peach_mall.yyq439.view.ScrollViewContainer
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFF"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_good_info_image"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tv_good_info_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="￥200.00"
                            android:textColor="#E80F54"
                            android:textSize="22sp" />
                        <TextView
                            android:id="@+id/tv_good_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="【预售】商品名称商品名称商品名称商品名称"
                            android:textColor="#FF3A7D"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_good_info_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="【618活动商品】使用优惠券可享九折优惠！"
                            android:layout_marginBottom="10dp"
                            android:textColor="#FA7FA9"/>




                        <!-- 分割线 -->
<!--                        <View-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="1dp"-->
<!--                            android:layout_margin="10dp"-->
<!--                            android:background="#F6CBD9"/>-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#FFE7EF"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="由 "
                                android:textColor="#F3ADC5"/>

                            <TextView
                                android:id="@+id/tv_good_info_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="蜜桃"
                                android:textColor="#DF2D6A"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 发货           快递：免运费\t\t\t\t\t\t\t\t\t\t\t\t\t\t月销：521"
                                android:textColor="#F3ADC5"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#FFE7EF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="服务：支持7天无理由"
                            android:padding="10dp"
                            android:textColor="#FF81AC"/>

                        <TextView
                            android:id="@+id/tv_good_info_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/home_arrow_right"
                            android:padding="10dp"
                            android:text="选择：请选择分类"
                            android:textColor="#FF81AC"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="参数：品牌 品名..."
                            android:padding="10dp"
                            android:textColor="#FF81AC"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#FFE7EF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="提示：普通商品享有质量问题7天退货，签收后3个工作日内可换货。其他特殊商品的售后以页面说明为准"
                            android:layout_marginBottom="10dp"
                            android:textColor="#F3ADC5"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#FFE7EF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="图文详情"
                            android:textColor="#F3ADC5"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ed3f3f"/>

                    </LinearLayout>

                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:id="@+id/wb_good_info_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></WebView>
                </ScrollView>

            </com.peach_mall.yyq439.view.ScrollViewContainer>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FFECF3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_good_info_callcenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/person"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="客服"
                android:textSize="12sp"
                android:textColor="#FA6698"/>

            <TextView
                android:id="@+id/tv_good_info_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/favourite"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:text="收藏"
                android:textColor="#FA6698"/>

            <TextView
                android:id="@+id/tv_good_info_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="1dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:drawableTop="@drawable/mycart"
                android:gravity="center"
                android:textSize="12sp"
                android:text="购物车"
                android:textColor="#FA6698"/>

            <Button
                android:id="@+id/btn_good_info_addcart"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.Button.Colored"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#fff" />

        </LinearLayout>

        <!-- 更多 -->
<!--        <include layout="@layout/more_layout"/>-->

    </FrameLayout>



</LinearLayout>